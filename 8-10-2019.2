#include <stdio.h>
#include <string.h>

int main()
{
    int edad;
    char nombre[10];
    printf("Ingrese su edad: ");
    scanf("%d",&edad);
    printf("Ingrese su nombre: ");
    gets(nombre);
    if(edad>=18)
        printf("%s, es mayor de edad",nombre);
    else
        printf ("%s, es menor de edad",nombre);
    
}
